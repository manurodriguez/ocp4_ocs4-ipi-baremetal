DEVICE={{ bond_name }}
TYPE=Bond
NAME={{ bond_name }}
BONDING_MASTER=yes
{% if bond_vlanid is defined and bond_vlanid != 'none' %}
BOOTPROTO=none
{% endif %}
ONBOOT=yes
MTU={{ bond_mtu }}
BONDING_OPTS="{{ bond_options }}"
AUTOCONNECT_SLAVES=yes
IPV6INIT=no
DHCPV6C=no
